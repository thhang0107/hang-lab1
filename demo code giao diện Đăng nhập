  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f0f6fc;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .login-box {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0px 4px 10px rgba(0,0,0,0.2);
      width: 300px;
      padding: 20px;
    }

    .login-box h2 {
      background: #2196F3;
      color: white;
      text-align: center;
      padding: 10px;
      border-radius: 5px;
      margin: 0 0 15px 0;
    }

    .input-group {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
      border: 1px solid #ccc;
      border-radius: 5px;
      overflow: hidden;
    }

    .input-group span {
      background: #eee;
      padding: 8px;
    }

    .input-group input {
      border: none;
      flex: 1;
      padding: 8px;
      outline: none;
    }

    .options {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 8px 0 15px 0;
    }

    .options a {
      font-size: 13px;
      text-decoration: none;
      color: #2196F3;
    }

    .buttons {
      display: flex;
      justify-content: space-between;
      gap: 10px;
    }

    button {
      flex: 1;
      border: none;
      border-radius: 5px;
      padding: 10px;
      color: white;
      font-size: 15px;
      cursor: pointer;
      transition: 0.3s;
    }

    /* Nút login mặc định hơi mờ */
    .login-btn {
      background: #90CAF9;
      cursor: not-allowed;
    }

    .login-btn.active {
      background: #2196F3;
      cursor: pointer;
    }

    .cancel-btn {
      background: #f44336;
    }

    #message {
      margin-top: 12px;
      text-align: center;
      font-size: 14px;
      color: red;
    }
  </style>
